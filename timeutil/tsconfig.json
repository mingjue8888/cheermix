{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationDir": "./lib",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}